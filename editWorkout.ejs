
<!-- edit workout command page-->
<%- include('layout') %>
<main class="edit-workout-form">
    <form action="/workouts/edit/<%= workout._id %>" method="POST">
    <h2>Edit Workout</h2>
    <table class="add-workout-table">
        <tr>
            <th>Field</th>
            <th>Input</th>
        </tr>
        <tr>
            <td><label for="workoutDate">Day of Workout:</label></td>
            <td><input type="date" id="workoutDate" name="workoutDate" value="<%= workout.workoutDate.toISOString().split('T')[0] %>" required></td>
        </tr>
        <tr>
            <td><label for="calories">Calories Burned:</label></td>
            <td><input type="number" id="calories" name="calories" value="<%= workout.calories %>" required></td>
        </tr>
        <tr>
            <td><label for="distance">Distance (km):</label></td>
            <td><input type="number" id="distance" name="distance" step="0.01" value="<%= workout.distance %>" required></td>
        </tr>
        <tr>
            <td><label for="bpm">Average BPM:</label></td>
            <td><input type="number" id="bpm" name="bpm" value="<%= workout.bpm %>" required></td>
        </tr>
        <tr>
            <td><label for="objectiveMet">Objective Met:</label></td>
            <td>
                <select name="objectiveMet" id="objectiveMet">
                    <option value="true" <%= workout.objectiveMet ? 'selected' : '' %>>Yes</option>
                    <option value="false" <%= !workout.objectiveMet ? 'selected' : '' %>>No</option>
                </select>
            </td>
        </tr>
    </table>
    <button type="submit" class="btn">Update Workout</button>
</form>
</main>
